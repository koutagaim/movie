h1 感想の詳細

.nav.justify-content-end
  = link_to '一覧', tasks_path, class: 'nav-link'
table.table.table-hover
  tbody
    tr
      th= Theme.human_attribute_name(:id)
      td= @theme.id
    tr
      th= Theme.human_attribute_name(:name)
      td= @theme.name
    tr
      th= Theme.human_attribute_name(:description)
      td= auto_link(simple_format(h(@theme.description), {}, sanitize: false, wrapper_tag: "div"))
    tr
      th= Theme.human_attribute_name(:created_at)
      td= @theme.created_at
    tr
      th= Theme.human_attribute_name(:updated_at)
      td= @theme.updated_at

= link_to '編集', edit_theme_path, class: 'btn btn-primary mr-3'
= link_to '削除', @theme, method: :delete, data: { confirm: "タスク「#{@theme.name}」を削除します。よろしいですか？" }, class: 'btn btn-danger'
